{
    "version": "0.2.0",
    "configurations": [
        {
            "program": "${workspaceFolder}${pathSeparator}build${pathSeparator}debug${pathSeparator}program",
            "name": "Build and debug main file",
            "cwd": "${workspaceFolder}${pathSeparator}source",
            "MIMode": "gdb",
            "request": "launch",
            "type": "cppdbg",
